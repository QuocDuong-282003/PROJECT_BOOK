<script>
    document.getElementById("city").addEventListener("change", async function () {
        const provinceId = this.value;
        const districtSelect = document.getElementById("district");
        document.getElementById("city_name").value= this.options[this.selectedIndex].text;
        // Xóa dữ liệu cũ
        
        districtSelect.innerHTML = '<option value="" data-display="Select">Loading...</option>';
        districtSelect.disabled = true;
    
        if (provinceId) {
            try {
                const response = await fetch(`/checkout/getDistricts?provinceId=${provinceId}`);
                const data = await response.json();
    
                // Kiểm tra xem có dữ liệu không
                if (data.districts.length > 0) {
                    districtSelect.innerHTML = '<option value="" data-display="Select">Choose...</option>';
                    data.districts.forEach(district => {
                        districtSelect.innerHTML += `<option value="${district.code}">${district.name_with_type}</option>`;
                    });
                    districtSelect.disabled = false;
                } else {
                    districtSelect.innerHTML = '<option value="" data-display="Select">No districts available</option>';
                }
            } catch (error) {
                console.error("Error fetching districts:", error);
                districtSelect.innerHTML = '<option value="" data-display="Select">Error loading</option>';
            }
        } else {
            districtSelect.innerHTML = '<option value="" data-display="Select">Select city first</option>';
        }
    });
    document.getElementById("district").addEventListener("change", async function () {
        const districtId = this.value;
        const wardSelect = document.getElementById("ward");
        document.getElementById('district_name').value= this.options[this.selectedIndex].text;
        // Xóa dữ liệu cũ
        wardSelect.innerHTML = '<option value="" data-display="Select">Loading...</option>';
        wardSelect.disabled = true;
    
        if (districtId) {
            try {
                const response = await fetch(`/checkout/getWards?districtId=${districtId}`);
                const data = await response.json();
                // Kiểm tra xem có dữ liệu không
                if (data.wards.length > 0) {
                    wardSelect.innerHTML = '<option value="" data-display="Select">Choose...</option>';
                    data.wards.forEach(ward => {
                        wardSelect.innerHTML += `<option value="${ward.name}">${ward.name_with_type}</option>`;
                    });
                    wardSelect.disabled = false;
                } else {
                    wardSelect.innerHTML = '<option value="" data-display="Select">No wards available</option>';
                }
            } catch (error) {
                console.error("Error fetching wards:", error);
                wardSelect.innerHTML = '<option value="" data-display="Select">Error loading</option>';
            }
        } else {
            wardSelect.innerHTML = '<option value="" data-display="Select">Select district first</option>';
        }
    });
</script>
    
