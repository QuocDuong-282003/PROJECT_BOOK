<h2>Thêm sách mới</h2>
<form action="/admin/books/add" method="POST">
    <label>Tên sách:</label>
    <input type="text" name="title" required>
    <label>Tác giả:</label>
    <input type="text" name="author" required>
    <label>Giá:</label>
    <input type="number" name="price" required>
    <button type="submit">Thêm</button>
</form>
