<div class="col-sm-12">
    <div id="exampleModalLive" class="modal fade" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalLiveLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLiveLabel">INSERT
                        PUBLISHER FORM</h5>
                    <button type="button" class="close" data-dismiss="modal"
                        aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="card-body">
                        <form action="admin/publisher/create/add" method="POST">
                            <div class="form-group row">
                                <label for="publisherName"
                                    class="col-sm-2 col-form-label">Publisher
                                    Name</label>
                                <div class="col-sm-10">
                                    <input type="text"
                                        class="form-control w-100"
                                        id="publisherName" name="name"
                                        placeholder="Enter Publisher Name">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="publisherCountry"
                                    class="col-sm-2 col-form-label">Country</label>
                                <div class="col-sm-10">
                                    <input type="text"
                                        class="form-control w-100"
                                        id="publisherCountry" name="country"
                                        placeholder="Enter Country">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label
                                    class="col-sm-2 col-form-label">Category</label>
                                <div class="col-md-10">
                                    <select class="form-control w-100"
                                        id="categorySelect" name="categories">
                                        <option value>Select Category</option>
                                        <!-- Lặp qua danh mục và hiển thị -->
                                        <% categories.forEach(category => { %>
                                        <option value="<%= category._id %>"><%=
                                            category.name %></option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label for="publisherDate"
                                    class="col-sm-2 col-form-label">Date
                                    Created</label>
                                <div class="col-sm-10">
                                    <input type="date"
                                        class="form-control w-100"
                                        id="publisherDate" name="dateCreated">
                                </div>
                            </div>

                            <button type="button" class="btn btn-secondary"
                                data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Add
                                Publisher</button>
                        </form>

                    </div>
                </div>
                <div class="modal-footer">

                </div>
            </div>
        </div>
    </div>
</div>
