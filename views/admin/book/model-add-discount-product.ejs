<div class="col-sm-12">
    <div id="assignDiscountModal" class="modal fade" tabindex="-1" role="dialog"
        aria-labelledby="assignDiscountModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="assignDiscountModalLabel">Gán Mã
                        Giảm Giá</h5>
                    <button type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="card-body">
                        <!-- FORM GÁN MÃ GIẢM GIÁ -->
                        <form id="discountAddForm"
                            action="/admin/books/assign/addProduct"
                            method="POST">
                            <!-- Hidden fields -->

                            <input type="hidden" name="_method" value="POST" />

                            <!-- Select Book -->
                            <div class="form-group">
                                <label for="selectBook">Chọn Sách</label>
                                <select name="bookId" id="selectBook"
                                    class="form-control" required>
                                    <% books.forEach(book => { %>
                                    <option value="<%= book._id %>"><%=
                                        book.title %></option>
                                    <% }) %>
                                </select>
                            </div>

                            <!-- Select Discount -->
                            <div class="form-group">
                                <label for="selectDiscount">Chọn Mã Giảm
                                    Giá</label>
                                <select name="discountId" id="selectDiscount"
                                    class="form-control" required>
                                    <% discounts.forEach(discount => { %>
                                    <option value="<%= discount._id %>">
                                        <%= discount.code %> -
                                        <%= discount.discountType === 'percent'
                                        ? discount.value + '%' : discount.value
                                        + '₫' %>
                                        (<%= discount.description %>)
                                    </option>
                                    <% }) %>
                                </select>
                            </div>

                            <!-- Footer buttons -->
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-dismiss="modal">Đóng</button>
                                <button type="submit" name="action"
                                    value="assign" class="btn btn-primary">Gán
                                    mã giảm giá</button>
                                <button type="submit" name="action"
                                    value="cancel" class="btn btn-danger">Huỷ mã
                                    giảm giá</button>

                            </div>

                        </form>
                        <!-- END FORM -->
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
